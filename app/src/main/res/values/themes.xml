<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PerpetualInvestment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_blue_bg</item>


        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/white_60</item>
        <item name="android:padding">15dp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="SignUpActivityBtn">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="MainActivityBtn">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/round_btn</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="ListItemTextViews">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="ProfilePageOptions">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="ProfilePageOptionsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>